<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jjanhu" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cb_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/like_button"
            android:button="@null"
            android:gravity="center" />


        <ImageView
            android:id="@+id/cb_others"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/cb_like"
            android:background="#233CC8"
            android:src="@drawable/others1" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/share" />


    </RelativeLayout>

    <TextView
        android:padding="8dp"
        android:id="@+id/tv_likecount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:text="좋아요_1234개"
        android:textColor="@color/black" />

    <View
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#6200ea"
            android:text="meeny_miny_moe__"
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"/>

        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="8dp"
            android:paddingBottom="20dp"
            android:text="빙글빙글 돌아가는 맷돌 "
            android:id="@+id/tv_posttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</LinearLayout>